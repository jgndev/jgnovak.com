---
const {slug, logo, description, title, date} = Astro.props;
---
<a href={`/projects/${slug}`} aria-label={description}>
    <div class="p-2 m-2 grayscale hover:grayscale-0 hover:duration-100 hover:ease-in-out flex flex-col items-center justify-center space-y-2 border border-zinc-700/30 rounded-md shadow-lg">
        <div>
            <img class="w-[300px]" src={logo}
                 alt={description}/>
        </div>
        <div>
            <h3 class="font-bold text-2xl uppercase">{title}</h3>
        </div>
        <div>
            <p class="px-4 text-zinc-400 text-sm">{description}</p>
        </div>
        <div class="pb-2">
            <span class="font-light text-sm">{date}</span>
        </div>
    </div>
</a>